{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@styles*": ["styles/modules*"],
      "@components*": ["src/components*"],
      "@globalStyles*": ["styles/global*"],
      "@store*": ["src/store*"],
      "@features*": ["src/features*"],
      "~@types*": ["src/types*"], // Like this because @types is already used
      "@cluiComponents*": ["src/clui-ui-components*"],
      "@core*": ["src/ts*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.css"]
}
